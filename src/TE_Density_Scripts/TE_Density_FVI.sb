#!/bin/bash -login
#SBATCH -J FVI_TE_Density
#SBATCH --time=7:00:00
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=7
#SBATCH --mem-per-cpu=30G
#SBATCH -o /mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/logs/FVI_Density.out
#--------------------------------------------------------
TE_DIR=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/TE_Density
IN_DATA_DIR=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/results/cleaned_annotations
OUT_DATA_DIR=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/results/density/FVI
GENOME="FVI"


# Load Python
module purge
module load GCCcore/11.3.0 Python/3.10.4

# Source the Python packages that are version controlled
source /mnt/research/edgerpat_lab/Scotty/venvs/S_Domestication/bin/activate

# Go to project directory
mkdir -p $OUT_DATA_DIR
cd $OUT_DATA_DIR


# Run the code
python $TE_DIR/process_genome.py $IN_DATA_DIR/Cleaned_FVI_GeneAnnotation.tsv $IN_DATA_DIR/Cleaned_FVI_NewNames.fa.mod.EDTA.TEanno.tsv $GENOME -c $TE_DIR/config/production_run_config.ini  -n 10 -o $OUT_DATA_DIR

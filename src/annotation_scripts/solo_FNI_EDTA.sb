#!/bin/bash -login
#SBATCH -J EDTA_FNI
#SBATCH --time=72:00:00
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=12
#SBATCH --mem-per-cpu=8G
#SBATCH -o /mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/logs/solo_EDTA_FNI.out
#--------------------------------------------------------

# This file is to test if we get any LINES in the FNI genome WITHOUT usage of the CDS fasta
EDTA_DIR=/mnt/research/edgerpat_lab/EDTA

module purge
module load Conda/3 # GCC/6.4.0-2.28 OpenMPI/2.1.2 SAMtools/1.9 BEDTools/2.27.1
conda activate EDTA  # activate the conda environment of packages

OUT_DIR=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/results/solo_EDTA/solo_FNI
mkdir -p $OUT_DIR
cd $OUT_DIR

# Run EDTA
perl $EDTA_DIR/EDTA.pl --genome /mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/data/Genomes/Fixed_Fastas/F_nipponica/FNI_NewNames.fa --sensitive 1 --anno 1 --overwrite 1 --threads 12
#singularity exec /mnt/research/edgerpat_lab/Scotty/EDTA.sif perl $EDTA_DIR/EDTA.pl --genome /mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/data/Genomes/Fixed_Fastas/F_nipponica/FNI_NewNames.fa --sensitive 1 --anno 1 --overwrite 1 --threads 12

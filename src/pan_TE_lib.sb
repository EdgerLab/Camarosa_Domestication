#!/bin/bash -login
#SBATCH -J Strawberry_panTElib
#SBATCH --time=12:00:00
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=12
#SBATCH --mem-per-cpu=12G
#SBATCH --mail-user=teresisc@msu.edu
#SBATCH --mail-type=ALL
#SBATCH --output=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/results/logs/panTElib.out
#--------------------------------------------------------
# Supplementary Info
begin=`date +%s`
echo $HOSTNAME
echo "My Task ID:" $SLURM_ARRAY_TASK_ID
# Define base paths
EDTA_DIR=/mnt/research/edgerpat_lab/EDTA
OUT_DATA_DIR=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/results/pan_lib
LIB_LIST=/mnt/research/edgerpat_lab/Scotty/Strawberry_Domestication/src/liblist.txt
#--------------------------------------------------------
# Load Modules
module purge
module load Conda/3
conda activate EDTA  # activate the conda environment of packages
#--------------------------------------------------------
# Run make_panTElib.pl
echo "Declaring output paths and running EDTA"
mkdir -p $OUT_DATA_DIR
cd $OUT_DATA_DIR
perl $EDTA_DIR/util/make_panTElib.pl -liblist $LIB_LIST -threads 12
#--------------------------------------------------------
# Final Supplementary Info
end=`date +%s`
elapsed=`expr $end - $begin`
echo Time taken: $elapsed
